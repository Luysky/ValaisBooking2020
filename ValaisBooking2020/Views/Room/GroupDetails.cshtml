@model ValaisBooking2020.Models.RoomGroupDetailsViewModel

@{
    ViewData["Title"] = "GroupDetails";
}

<h1>Détail offre</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nom de l'hotel
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Nombre de chambre
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nbRoom)
        </dd>
        <dt class = "col-sm-2">
            Prix total
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="BookingGroup" asp-action="Index" method="get">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Réservation" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
