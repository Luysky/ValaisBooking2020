@model ValaisBooking2020.Models.RoomPictureViewModel

@{
    ViewData["Title"] = "Picture";
}

<h1>Détail offre</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Prix
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Booking" asp-action="Index" method="get">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Réservation" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<table>
    <thead>
        <tr>
            <th>
                Liste des photos
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Pictures)
        {
            <tr>
                <th>
                    <img src="@Url.Content(item.Url)" alt="Image" />
                </th>
            </tr>
        }
    </tbody>
</table>
