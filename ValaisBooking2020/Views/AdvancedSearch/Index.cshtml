@model ValaisBooking2020.Models.AdvancedSearchViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Recherche multicritères</h1>

<h4>Veuillez faire vos sélections.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="RoomAdvanced" asp-action="Index" method="get">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.DropDownListFor(m => m.cities, new SelectList(Enum.GetValues(typeof(Cities))), "Choix ville")
            <p> </p>
            <div class="form-group">
                <label>Date de checkin</label>
                <input asp-for="checkIn" class="form-control" />
                <span asp-validation-for="checkIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Date de checkout</label>
                <input asp-for="checkOut" class="form-control" />
                <span asp-validation-for="checkOut" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Category" class="control-label">Etoiles</label>
                <input asp-for="Category" type="number" min="2" max="5" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="type" class="control-label">Lit simple (1) | lit double (2)</label>
                <input asp-for="type" type="number" min="1" max="2" class="form-control" />
                <span asp-validation-for="type" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HasWifi" /> Wifi
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HasParking" /> Parking
                </label>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HasTv" /> Tv 
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HasHairDryer" /> Sèche-cheveux
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Valider" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
