@model ValaisBooking2020.Models.BookingConfirmationViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Confirmation d'annulation</h1>

<div>
    <h4>Vos informations</h4>
    <hr />
    <form asp-controller="MyBooking" asp-action="Confirmation">
        <dl class="row">
            <dt class="col-sm-2">
                Date de checkin
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CheckIn)
            </dd>
            <dt class="col-sm-2">
                Date de checkout
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CheckOut)
            </dd>
            <dt class="col-sm-2">
                Prénom
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Firstname)
            </dd>
            <dt class="col-sm-2">
                Nom
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Lastname)
            </dd>
            <dt class="col-sm-2">
                Prix
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Amount)
            </dd>
            <div class="form-group">
                <input type="submit" value="Annuler la réservation" class="btn btn-primary" />
            </div>
        </dl>
    </form>
</div>
