@model ValaisBooking2020.Models.BookingGroupConfirmationViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Confirmation de réservation</h1>

<div>
    <h4>Vos informations</h4>
    <hr />
    <form asp-controller="BookingGroup" asp-action="Confirmation">
        <p>Lors d'une réservation multiple vous bénéficiez d'une réduction de 5%.</p>
        <p>Annulation individuelle impossible.</p>
        <dl class="row">

            <dt class="col-sm-2">
                Date de checkin
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CheckIn)
            </dd>
            <dt class="col-sm-2">
                Date de checkout
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CheckOut)
            </dd>
            <dt class="col-sm-2">
                Prénom
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Firstname)
            </dd>
            <dt class="col-sm-2">
                Nom
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Lastname)
            </dd>
            <dt class="col-sm-2">
                Prix après réduction de 5%
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Amount)
            </dd>
        </dl>
        <dd class="form-group">
            <input type="submit" value="Réserver" class="btn btn-primary" />
        </dd>
    </form>
</div>

